<div class="container">
    <div class="row mb-3">
    {{#if products}}
        {{#each products}}
        <div class="col-4">
            <div class="card " style="width: 20rem;">
            <img class="img-fluid"  style="max-height: 200px;"  src={{this.thumbnails}} alt="{{this.title}}">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.description}}</p>
                <div class="row mb-2">
                    <div class="col-6">
                    <mark>$ {{this.price}}</mark>
                    </div>
                    <div class="col-6">
                        <a href="#" class="btn btn-outline-primary" onclick=addToCart('{{this._id}}')>Comprar</a>

                    </div>
                </div>
            </div>
            </div>
        </div>
        {{/each }}  

    {{/if}}
    </div>

</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/index.js"></script>
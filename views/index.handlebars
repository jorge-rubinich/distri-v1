<div class="container-fluid ">

    <div class="row mb-2">
        <div class ="col-8">

        </div>
        <div class = "col-4">
            <section id="botonCarrito">
                <a>
                </a>
                <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#carritoOffcanvas" aria-controls="carritoOffcanvas">
                    <i class="bi bi-cart4"><img = src="./imgs/shopping_cart.svg"></i><span id="contadorCarrito"></span>
                </button>
                <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#chatOffcanvas" aria-controls="chatOffcanvas">
                    <i class="bi bi-cart4"><img = src="./imgs/chat.svg"></i>
                </button>                                    

            </section>
        </div>


    </div>
    <div class=" border">
    <form >
        <div class="row mb-4">
            <div class="form-group col-4">
                Categoria: 
            </div>
            <div class="form-group col-4">
                ordenar Por: 
            </div>
            <div class="form-group col-4"> 
                <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="asc">
                <label class="form-check-label" for="inlineRadio1">Ascendente</label>
                </div>
                <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="desc">
                <label class="form-check-label" for="inlineRadio2">Descendente</label>
                </div>
            </div>
            </div>
        </div>
    </form>
    </div>
    <br>

    <div class="row mb-3">

    {{#if products}}
        {{#each products}}
        <div class="col-4">
            <div class="card " style="width: 18rem; height:500px">
            <img class="img-fluid"  style="height: 250px"  src={{this.thumbnails}} alt="{{this.title}}">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.description}}</p>
                <div class="row mb-2">
                    <div class="col-6">
                    <mark>$ {{this.price}}</mark>
                    </div>
                    <div class="col-6">
                        <a href="#" class="btn btn-outline-primary" onclick=addToCart('{{this._id}}')>Comprar</a>

                    </div>
                </div>
            </div>
            </div>
        </div>
        {{/each }}  

    {{/if}}
    </div>
    {{#if havePages}}
        <div class="row mb-3">
            <div class="col-4">
                {{#if hasPrevPage}}
                    <a href="{{prevLink}}" class=""><< Pagina {{prevPage}}</a>
                {{/if}}
            </div>
            <div class="col-4">
                Pagina  {{page}} de {{totalPages}}
            </div>
            <div class="col-4">
                {{#if hasNextPage}}
                     <a href="{{nextLink}}" class="">Pagina {{nextPage}} >></a>
                {{/if}}
            </div>

        </div>
    {{/if}}
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
